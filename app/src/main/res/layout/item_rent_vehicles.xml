<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_itemimage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <LinearLayout
        android:id="@+id/ll_vehicledetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_itemimage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_carname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_carvarient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Varient"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_vehicledetails"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_savetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_itemimage"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/black_saved_border"
        android:paddingVertical="1dp"
        android:paddingHorizontal="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_availabilitytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="availability text"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_savetext"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>